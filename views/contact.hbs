<h2>Contact me</h2>
{{#if isSent}}
	<div class="isSent">
		The message has been sent! <br> File {{fileName}} has been saved
		<div>
			<img src="../{{fileName}}" class="image">
		</div>
	</div>
{{/if}}
{{#if isError}}
	<div class="isError">
		You can't leave fields empty!
	</div>   
{{/if}}
</div>
<form action="/contact/send-message" method="post" enctype="multipart/form-data">
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
	<label>
		Project design: <input type="file" name="image" accept=".png, .jpg, .gif, .jpeg">
	</label>
  <label>
    Message: <textarea name="message"></textarea>
  </label>
  <button type="submit">Send message</button>
</form>

